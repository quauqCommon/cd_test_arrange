<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cd.arrange.web.dao.auto.DataMapDAO">
    <resultMap id="BaseResultMap" type="com.cd.arrange.web.model.auto.DataMap">

        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="dataMapkey" property="dataMapkey" jdbcType="VARCHAR" />
        <result column="category" property="category" jdbcType="INTEGER" />
        <result column="scriptId" property="scriptId" jdbcType="INTEGER" />
        <result column="sort" property="sort" jdbcType="INTEGER" />
    </resultMap>
    
    
	<select id="findList" resultMap="BaseResultMap" parameterType="com.cd.arrange.web.model.auto.DataMap">
        select t.* from t_dataMap t
        where 1=1
        <if test="pageSize != null and pageStart != null">
        	limit #{pageStart},#{pageSize}
        </if>
    </select>
    <select id="findMaxSort" parameterType="Integer" resultType="Integer">
        select IFNULL(max(sort),0) sort from t_datamap t where t.scriptId=#{scriptId}
    </select>
   
       
    <select id="findCount" resultType="Integer" parameterType="com.cd.arrange.web.model.auto.DataMap">
        select count(1) count from ( select
        *
        from t_dataMap t where 1=1
        )tt
    </select>
    <insert id="insert" parameterType="com.cd.arrange.web.model.auto.DataMap">
        insert into t_dataMap (name,dataMapKey,category,scriptId,sort)
        values (#{name,jdbcType=VARCHAR},#{dataMapKey,jdbcType=VARCHAR},#{category,jdbcType=BIGINT}, #{scriptId,jdbcType=BIGINT},#{sort,jdbcType=BIGINT})
    </insert>
    <delete id="delete" parameterType="Integer">
        delete from t_dataMap where id=#{id}
    </delete>
</mapper>